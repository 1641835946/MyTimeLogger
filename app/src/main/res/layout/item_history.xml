<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/tag_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin"
        tools:background="@drawable/icon"/>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin"
        tools:text="648:25"/>

    <TextView
        android:id="@+id/tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/tag_icon"
        android:layout_toEndOf="@id/tag_icon"
        android:layout_alignTop="@id/tag_icon"
        tools:text="benefit"
        />

    <TextView
        android:id="@+id/begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tag_icon"
        android:layout_toEndOf="@id/tag_icon"
        android:layout_toRightOf="@id/tag_icon"
        android:layout_below="@id/tag_name"
        tools:text="02:00pm-"
        />

    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tag_icon"
        android:layout_toStartOf="@id/duration"
        android:layout_toLeftOf="@id/duration"
        android:layout_toEndOf="@id/begin"
        android:layout_toRightOf="@id/begin"
        android:layout_below="@id/tag_name"
        tools:text="02:25pm"/>
</RelativeLayout>